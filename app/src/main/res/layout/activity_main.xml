                        app:layout_constraintStart_toStartOf="@+id/background_putih_cons"
                        app:layout_constraintTop_toTopOf="@+id/background_putih_cons" />

                    <TextView
                        android:id="@+id/tv_saldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp109.048"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/icon_gopay"
                        app:layout_constraintTop_toTopOf="@+id/background_putih_cons"
                        app:layout_constraintBottom_toTopOf="@id/tv_coin"/>


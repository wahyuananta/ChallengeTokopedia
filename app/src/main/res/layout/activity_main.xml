            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolbar_cons"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/search"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:drawableStart="@drawable/ic_search"
                    android:hint="Cari Powerbank"
                    android:textSize="16sp"
                    android:padding="12dp"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_cons"
                    app:layout_constraintStart_toStartOf="@id/toolbar_cons"
                    app:layout_constraintTop_toTopOf="@id/toolbar_cons" />

                <ImageView
                    android:id="@+id/message"
                    app:layout_constraintStart_toEndOf="@id/search"
                    app:layout_constraintEnd_toStartOf="@id/notification"
                    app:layout_constraintTop_toTopOf="@id/toolbar_cons"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_cons"
                    android:src="@drawable/ic_message"
                    android:padding="9dp"
                    android:backgroundTint="@color/white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/notification"
                    app:layout_constraintStart_toEndOf="@id/message"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/toolbar_cons"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_cons"
                    android:src="@drawable/ic_notification"
                    android:padding="9dp"
                    android:backgroundTint="@color/white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/shop"
                    app:layout_constraintStart_toEndOf="@id/notification"
                    app:layout_constraintEnd_toStartOf="@id/menu"
                    app:layout_constraintTop_toTopOf="@id/toolbar_cons"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_cons"
                    android:src="@drawable/ic_shop"
                    android:padding="9dp"
                    android:backgroundTint="@color/white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/menu"
                    app:layout_constraintStart_toEndOf="@id/shop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/toolbar_cons"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_cons"
                    android:src="@drawable/ic_menu"
                    android:padding="9dp"
                    android:backgroundTint="@color/white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/bottom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="@id/nav_bottom"
            app:layout_constraintStart_toStartOf="@id/nav_bottom"
            app:layout_constraintEnd_toEndOf="@id/nav_bottom"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/icon_home"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_nav_home"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/bottom_toolbar"
            app:layout_constraintBottom_toTopOf="@id/tv_home"
            app:layout_constraintStart_toStartOf="@id/bottom_toolbar"
            app:layout_constraintEnd_toStartOf="@id/icon_feed" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/icon_home"
            app:layout_constraintStart_toStartOf="@id/icon_home"
            app:layout_constraintEnd_toEndOf="@id/icon_home"
            app:layout_constraintBottom_toBottomOf="@id/bottom_toolbar" />

        <ImageButton
            android:id="@+id/icon_feed"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_nav_feed"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/icon_home"
            app:layout_constraintStart_toEndOf="@id/icon_home"
            app:layout_constraintEnd_toStartOf="@id/icon_official_store_nav" />

        <TextView
            android:id="@+id/tv_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Feed"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/icon_feed"
            app:layout_constraintBottom_toBottomOf="@id/tv_home"
            app:layout_constraintStart_toStartOf="@id/icon_feed"
            app:layout_constraintEnd_toEndOf="@id/icon_feed" />

        <ImageButton
            android:id="@+id/icon_official_store_nav"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_nav_official_store"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/icon_feed"
            app:layout_constraintStart_toEndOf="@id/icon_feed"
            app:layout_constraintEnd_toStartOf="@id/icon_wishlist" />

        <TextView
            android:id="@+id/tv_official_store_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Official Store"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/icon_official_store_nav"
            app:layout_constraintBottom_toBottomOf="@id/tv_feed"
            app:layout_constraintStart_toStartOf="@id/icon_official_store_nav"
            app:layout_constraintEnd_toEndOf="@id/icon_official_store_nav" />

        <ImageButton
            android:id="@+id/icon_wishlist"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_nav_wishlisht"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/icon_official_store_nav"
            app:layout_constraintStart_toEndOf="@id/icon_official_store_nav"
            app:layout_constraintEnd_toEndOf="@id/icon_transaksi" />

        <TextView
            android:id="@+id/tv_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Wishlist"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/icon_wishlist"
            app:layout_constraintBottom_toBottomOf="@id/tv_official_store_nav"
            app:layout_constraintStart_toStartOf="@id/icon_wishlist"
            app:layout_constraintEnd_toEndOf="@id/icon_wishlist" />

        <ImageButton
            android:id="@+id/icon_transaksi"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_nav_transaksi"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/icon_wishlist"
            app:layout_constraintStart_toEndOf="@id/icon_wishlist"
            app:layout_constraintEnd_toEndOf="@id/bottom_toolbar" />

        <TextView
            android:id="@+id/tv_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Transaksi"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/icon_transaksi"
            app:layout_constraintBottom_toBottomOf="@id/tv_wishlist"
            app:layout_constraintStart_toStartOf="@id/icon_transaksi"
            app:layout_constraintEnd_toEndOf="@id/icon_transaksi" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>